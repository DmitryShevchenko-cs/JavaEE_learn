<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Lab5</display-name>
    <welcome-file-list>
        <welcome-file>/pages/Index.html</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>com.Lab6.servlets.filters.SessionFilter</filter-class>
        <init-param>
            <param-name>ignore-urls</param-name>
            <param-value>/login,/pages/Index.html,/register,/doregister</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>IndvServlet</servlet-name>
        <servlet-class>com.Lab6.servlets.IndvServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndvServlet</servlet-name>
        <url-pattern>/indv</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>LoginController</display-name>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.Lab6.servlets.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationForm</servlet-name>
        <jsp-file>/pages/registration-form.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationForm</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationHandle</servlet-name>
        <jsp-file>/pages/registration-handle.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationHandle</servlet-name>
        <url-pattern>/doregister</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccountsList</servlet-name>
        <jsp-file>/pages/AllUsers.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountsList</servlet-name>
        <url-pattern>/AllUsers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Home</servlet-name>
        <jsp-file>/pages/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>IncomeForm</servlet-name>
        <jsp-file>/pages/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>IncomeForm</servlet-name>
        <url-pattern>/income</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddIncome</servlet-name>
        <servlet-class>com.Lab6.servlets.AddIncome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddIncome</servlet-name>
        <url-pattern>/addincome</url-pattern>
    </servlet-mapping>

</web-app>